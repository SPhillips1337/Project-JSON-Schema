{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/project-json-schema/v1.json",
  "title": "Project JSON Schema",
  "description": "Schema for machine-friendly project manifests used to hand off work to LLMs and developers.",
  "type": "object",
  "required": ["schemaVersion", "name", "slug", "summary", "version"],
  "properties": {
    "schemaVersion": { 
      "type": "string", 
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema semver version (e.g., '1.1.0')" 
    },
    "name": { 
      "type": "string",
      "minLength": 1,
      "description": "Human-readable project name"
    },
    "slug": { 
      "type": "string", 
      "pattern": "^[a-z0-9_-]+$",
      "minLength": 1,
      "description": "URL-safe project identifier (lowercase, numbers, hyphens, underscores only)"
    },
    "summary": { 
      "type": "string",
      "minLength": 1,
      "description": "Brief project description"
    },
    "version": { 
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.-]+)?$",
      "description": "Project version following semver format"
    },
    "license": { "type": "string" },
    "repository": { "type": "string", "format": "uri", "description": "Canonical code repository URL" },
    "goals": { "type": "array", "items": { "type": "string" } },
    "primary_features": { "type": "array", "items": { "type": "string" } },
    "secondary_features": { "type": "array", "items": { "type": "string" } },
    "tech_stack": { "type": "object", "additionalProperties": { "type": "string" } },
    "comfyui_integration": { "type": "object", "additionalProperties": true },
    "admin_settings": { "type": "object", "additionalProperties": true },
    "security_considerations": { "type": "array", "items": { "type": "string" } },
    "development_state": {
      "type": "object",
      "properties": {
        "scaffold": { "type": "string" },
        "reviewed_examples": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "string" }
      }
    },
    "development_plan": {
      "type": "object",
      "properties": {
        "currentPhase": { "type": "integer" },
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "number": { "type": "integer" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "tasks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "status": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "todo": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "status"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "status": { "type": "string", "enum": ["pending", "in_progress", "completed"] },
          "priority": { "type": "string" }
        }
      }
    },
    "files_of_interest": { "type": "array", "items": { "type": "string" } },
    "open_questions": { "type": "array", "items": { "type": "string" } },
    "contact": { "type": "object", "additionalProperties": { "type": "string" } },
    "how_to_run_locally": { "type": "object", "additionalProperties": true },
    "lastUpdated": { "type": "string", "format": "date-time", "description": "ISO 8601 timestamp of last update" },
    "api_endpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "endpoint": { "type": "string" },
          "method": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["endpoint"]
      }
    },
    "external_services": { "type": "object", "additionalProperties": { "type": "string" } },
    "required_env": { "type": "array", "items": { "type": "string" } },
    "current_capabilities": { "type": "array", "items": { "type": "string" } },
    "next_steps": { "type": "array", "items": { "type": "string" } },
    "architecture": {
      "type": "object",
      "properties": {
        "overview": { "type": "string" },
        "components": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "implementation": { "type": "string" },
              "files": { "type": "array", "items": { "type": "string" } },
              "status": { "type": "string" }
            }
          }
        }
      }
    },
    "infrastructure": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "notes": { "type": "string" },
        "files": { "type": "array", "items": { "type": "string" } }
      }
    },
    "status": { "type": "string" },
    "concept": { "type": "string" },
    "current_goals": { "type": "array", "items": { "type": "string" } },
    "key_files": { "type": "object", "additionalProperties": { "type": "string" } },
    "rarity_system": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "chance": { 
            "type": "number", 
            "minimum": 0, 
            "maximum": 100,
            "description": "Percentage chance for this rarity group (0-100)"
          },
          "colors": { 
            "oneOf": [ 
              { 
                "type": "string",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "description": "Single hex color code"
              }, 
              { 
                "type": "array", 
                "items": { 
                  "type": "string",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "description": "Array of hex color codes"
              } 
            ],
            "description": "Hex color string or array of hex colors"
          },
          "traits": { 
            "oneOf": [ 
              { "type": "string" }, 
              { "type": "array", "items": { "type": "string" } } 
            ],
            "description": "Single trait or array of trait strings"
          }
        },
        "required": ["chance"],
        "additionalProperties": false
      }
    },
    "generation_modes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "command": { 
            "type": "string",
            "description": "Command to execute this generation mode"
          },
          "url": { 
            "type": "string", 
            "format": "uri",
            "description": "Optional endpoint URL for remote generation"
          },
          "description": { 
            "type": "string",
            "description": "Human-readable description of this generation mode"
          },
          "features": { 
            "type": "array", 
            "items": { "type": "string" },
            "description": "List of features supported by this mode"
          },
          "time": { 
            "oneOf": [ 
              { 
                "type": "number",
                "minimum": 0,
                "description": "Generation time in seconds (numeric preferred)"
              }, 
              { 
                "type": "string",
                "pattern": "^(~?\\d+(\\.\\d+)?[smh]?|\\d+(\\.\\d+)?\\s*(seconds?|minutes?|hours?)|~\\d+(\\.\\d+)?[smh]?)$",
                "description": "Generation time as descriptive string (e.g., '~2s', '30 seconds')"
              } 
            ],
            "description": "Generation time - numeric seconds preferred, descriptive strings allowed"
          }
        },
        "additionalProperties": false
      }
    },
    "features": {
      "type": "object",
      "properties": {
        "completed": { "type": "array", "items": { "type": "string" } },
        "demo_ready": { "type": "array", "items": { "type": "string" } },
        "future_enhancements": { "type": "array", "items": { "type": "string" } }
      }
    },
    "demo_stats": {
      "type": "object",
      "properties": {
        "total_generated": { 
          "type": "integer",
          "minimum": 0,
          "description": "Total number of items generated"
        },
        "generation_success_rate": { 
          "oneOf": [ 
            { 
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Success rate as percentage (0-100, numeric preferred)"
            }, 
            { 
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?%?$",
              "description": "Success rate as string (e.g., '98.7%' or '98.7')"
            } 
          ],
          "description": "Generation success rate - numeric percentage preferred, strings allowed for legacy"
        },
        "average_generation_time": { 
          "oneOf": [ 
            { 
              "type": "number",
              "minimum": 0,
              "description": "Average generation time in seconds (numeric preferred)"
            }, 
            { 
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?\\s*(s|sec|seconds?|m|min|minutes?|h|hr|hours?)?$",
              "description": "Average generation time as string (e.g., '2.5s', '30 seconds')"
            } 
          ],
          "description": "Average generation time - seconds preferred, descriptive strings allowed"
        },
        "rarity_breakdown": { 
          "type": "object", 
          "additionalProperties": { "type": "string" },
          "description": "Breakdown of rarity occurrences"
        }
      },
      "additionalProperties": false
    },
    "progress_percent": { "type": "number", "minimum": 0, "maximum": 100 },
    "progress_state": { "type": "string" },
    "next_version_goals": { "oneOf": [ { "type": "string" }, { "type": "array", "items": { "type": "string" } } ] }
  }
}
